<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="blog">Blog</h1>
      <% if user_signed_in? %>
          <%= link_to "Signout", destroy_user_session_path, method: :delete, class: 'nav' %>
          <a href="/blogs/new" class="nav">New</a>
        <% else %>
          <%= link_to "Signup", new_user_registration_path, class: 'nav' %>
          <%= link_to "Login", new_user_session_path, class: 'nav' %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
